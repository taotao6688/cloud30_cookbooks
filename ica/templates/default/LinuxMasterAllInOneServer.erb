################################################################################
#
# Response file
#
################################################################################

################################################################################
#
# License Acceptance
#
# If you accept the license, <value> should be "true".
#
LICENSE_ACCEPTED=true

################################################################################
#
# Server host name
#
# The server host name. Server name should be FQDN
#
SERVER_HOSTNAME=<%= @hostname %>

################################################################################
#
# Install user name
#
INSTALL_USER_NAME=esadmin

################################################################################
#
# Create user or not
#
# true:  create new user
# false: do not create new user. use existing user
#
CREATE_USER=true

################################################################################
#
# Install user password
#
INSTALL_USER_PASSWORD=password

################################################################################
#
# Install user password confirm
#
INSTALL_USER_PASSWORD_CONF=password

################################################################################
#
# Server type
#
# ALL_IN_ONE : Master: All in one node
# DISTRIBUTED : Master: Distributed node
# ADDITIONAL : Additional node
#
NODE_TYPE=ALL_IN_ONE

################################################################################
#
# Installation directory
#
USER_INSTALL_DIR=/opt/IBM/es/

################################################################################
#
# Data directory
#
# Default setting: user home directory
#
NODE_ROOT=/opt/IBM/es/esadmin

################################################################################
#
# CCL port
#
# This value should be modified if the port listed is already in use on this 
# machine.  This port is used internally by this product.
#
CCL_PORT=6002

################################################################################
#
# Data storage port
#
# This value should be modified if the port listed is already in use on this 
# machine.  This port is used internally by this product.
#
DATA_STORAGE_PORT=1527

################################################################################
#
# HTTP Port which the product will use for admin application
#
# you can access 
#   http://<SERVER_NAME>:<ADMIN_HTTP_PORT>/ESAdmin
#
ADMIN_HTTP_PORT=8390

################################################################################
#
# Search server port
#
SEARCH_SERVER_PORT=8394

################################################################################
#
# Application server for search application
#
#  JETTY : Jetty
#  WAS: WebSphere Application Server
#
APP_SERVER=JETTY

################################################################################
#
#  HTTP Port which the product will use for search application
#  (if you use WebSphere Application Server, port which is set at httpd.conf will be used)
# you can access 
#   http://<SERVER_NAME>:<SEARCH_APP_HTTP_PORT>/search
#
SEARCH_APP_HTTP_PORT=8393

################################################################################
#
# WebSphere installed directory
#
# If you select WAS, you have to set this property.
#
WAS_INSTALL_DIR=/opt/IBM/WebSphere/AppServer

################################################################################
#
# IBM Http Server installed directory
#
# If you select WAS, you have to set this property.
#
IHS_INSTALL_DIR=/opt/IBM/HTTPServer

################################################################################
#
# WebSphere server fully qualified host name
#
# If you select WAS, you have to set this property.
#
WAS_SERVER_NAME=<value>

################################################################################
#
# WebSphere profile name
#
# If you select WAS, you have to set this property.
#
WAS_PROFILE=<value>

################################################################################
# (Search capability)
# WebSphere cell name
#
# If you select WAS, you have to set this property.
#
WAS_CELL_NAME=<value>

################################################################################
#
# WebSphere node name
#
# If you select WAS, you have to set this property.
#
WAS_NODE_NAME=<value>

################################################################################
#
# Web server name
#
# If you select WAS, you have to set this property.
#
WEB_SERVER_NAME=<value>

################################################################################
#
# WebSphere Deployment manager profile name
#
# If you select WAS and its edition is WAS ND, you have to set this property.
#
WAS_ND_PROFILE=Dmgr01

################################################################################
#
# WebSphere admin user name
#
# If you select WAS and security on, you have to set this property.
#
WAS_USER_NAME=<value>

################################################################################
#
# Websphere admin password
#
# If you select WAS and security on, you have to set this property.
#
WAS_USER_PASSWORD=<value>

################################################################################
#
# Websphere admin password confirmation
#
# If you select WAS and security on, you have to set this property.
#
WAS_USER_PASSWORD_CONF=<value>
